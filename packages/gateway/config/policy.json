{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "FindProject",
      "Effect": "Allow",
      "Action": ["dynamodb:PartiQLSelect", "dynamodb:GetItem"],
      "Resource": "arn:aws:dynamodb:*:122210178198:table/projects"
    },
    {
      "Sid": "InvokeBackend",
      "Effect": "Allow",
      "Action": "lambda:InvokeFunction",
      "Resource": "arn:aws:lambda:*:122210178198:function:backend-*"
    },
    {
      "Effect": "Allow",
      "Action": "logs:CreateLogGroup",
      "Resource": "arn:aws:logs:*:122210178198:*"
    },
    {
      "Effect": "Allow",
      "Action": ["logs:CreateLogStream", "logs:PutLogEvents"],
      "Resource": [
        "arn:aws:logs:*:122210178198:log-group:/aws/lambda/queuerun-gateway:*"
      ]
    }
  ]
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", ".*", "**/*.test.ts"]
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "exclude": ["**/node_modules", ".*"]
}
